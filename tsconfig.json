{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "retypewriter": [
        "./packages/core/src/index.ts"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "vite/client",
      "vitest/importMeta"
    ],
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": [
    "./examples/**/*"
  ]
}
